{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">번호</th>
        <th scope="col">이름</th>
        <th scope="col">주소</th>
    </tr>
    </thead>
    <tbody>
    {{#information}}
        <tr>
            <th scope="row">{{id}}</th>
            <td><a href="/notice/hospitals/{{id}}">{{hospitalName}}</a></td>
